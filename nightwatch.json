{
  "src_folders" : ["tests"],

  "webdriver" : {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions" : {
          "args" : ["--no-sandbox"]
        }
      }
    }
  },

  "selenium" : {
    "cli_args" : {
      "webdriver.chrome.driver" : "~/qrt-nightwatch/node_modules/chromedriver/bin/"
    }
  }
}